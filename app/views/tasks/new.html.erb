<h1>ADDING TASK</h1>
<% if @task.errors.any? %>
    <% @task.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  <% end %>
<%= form_for @task do |t| %>
  <div class="form-group">
    <%= t.label :title %>
    <%= t.text_field :title %>
  </div>
  <div class="form-group">
    <%= t.label :details %>
    <%= t.text_field :details %>
  </div>
  <%= t.submit class: 'btn btn-primary' %>
<% end %>