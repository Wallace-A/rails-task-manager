<h1>Tasks Index</h1>

  <% @tasks.each do |task| %>
  <div class="container-task">
    <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>

    <%= link_to task.title, task_path(task) %>
    <%= link_to task_path(task), method: :delete, style: 'color:lightgray', data: { confirm: "Delete #{task.title}" } do %>
    <i class="fas fa-times"></i>
    <% end %>

  </div>
    
  <% end %>
  <div class="button-div">
    <%= link_to 'Add new task', new_task_path, class: 'btn btn-light' %>
  </div>

